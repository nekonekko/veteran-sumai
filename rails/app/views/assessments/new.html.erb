<section class="grid gap-3">
    <h1 class="text-center text-xl sm:text-2xl md:text-4xl">査定依頼フォーム</h1>
    <p class="text-center">フォームは全て必須入力です。</p>
</section>

<%= form_with model: @assessment_request ,url: assessments_path, method: :post do |form|%>
    <%= form.hidden_field :office_id, value: @assessment_request.office_id %>
    
    <section>
        <h2 class="bg-blue-400 text-white my-5 px-3">あなたの情報</h2>

        <div class='grid grid-cols-3 gap-3 w-full xl:w-5/6 mx-auto'>
        <%= form.label :user_name, "お名前"%>
        <span class='col-span-2'>
            <%= form.text_field :user_name %>
        </span>
        <%= form.label :user_name_kana, "フリガナ"%>
        <span class='col-span-2'>
            <%= form.text_field :user_name_kana %>
        </span>
        <%= form.label :user_tel, "電話番号"%>
        <%= form.text_field :user_tel, class: 'col-span-2'%>
        <%= form.label :user_email, "メールアドレス"%>
        <%= form.text_field :user_email, class: 'col-span-2'%>
        </div>
    </section>

    <section>
        <h2 class="bg-blue-400 text-white my-5 px-3">物件の情報</h2>
        <div class='grid grid-cols-3 gap-3 mb-3 xl:w-5/6 mx-auto'>
            <%= form.label :city_id, "市区町村"%>
            <%= form.select :city_id, options_for_select(
                City.all.map{|city| [city.name, city.id]}
                ), prompt: '市区町村を選択してください。', class: 'col-span-2' %>
        </div>

        <div class='grid grid-cols-3 gap-3 xl:w-5/6 mx-auto'>
            <%= form.label :property_address, "市区町村以下"%>
            <%= form.text_field :property_address, class: 'col-span-2' %>

            <p>物件種別</p>
            <span class='col-span-2'>
            <%= form.radio_button :property_type, :one %>
            <%= form.label :property_type, "分譲マンション", {value: :one, style: "display: inline-block;"} %>
            <%= form.radio_button :property_type, :two %>
            <%= form.label :property_type, "一戸建て", {value: :two, style: "display: inline-block;"} %>
            <%= form.radio_button :property_type, :three %>
            <%= form.label :property_type, "土地", {value: :three, style: "display: inline-block;"} %>
            </span>

            <%= form.label :property_exclusive_area, "専有面積"%>
            <%= form.text_field :property_exclusive_area, class: 'col-span-2' %>

            <%= form.label :property_land_area, "土地面積"%>
            <%= form.text_field :property_land_area, class: 'col-span-2' %>

            <%= form.label :property_building_area, "建物面積"%>
            <%= form.text_field :property_building_area, class: 'col-span-2' %>
        </div>

        <div class='grid grid-cols-3 gap-3 my-3 xl:w-5/6 mx-auto'>
            <%= form.label :property_room_plan, "間取り"%>
            <%= form.select :property_room_plan, options_for_select({
                '1R' => 1,
                '1K / 1DK' => 2,
                '1LK / 1LDK' => 3,
                '2K / 2DK' => 4,
                '2LK / 2LDK' => 5,
                '3K / 3DK' => 6,
                '3LK / 3LDK' => 7,
                '4K / 4DK' => 8,
                '4LK / 4LDK' => 9,
                '5K / 5DK' => 10,
                '5LK / 5LDK' => 11,
                '6K / 6DK' => 12,
                '6LK / 6LDK以上' => 13
                }), prompt: '部屋タイプを選択してください', class: 'col-span-2' %>
        </div>

        <div class='grid grid-cols-3 gap-3 xl:w-5/6 mx-auto'>
            <%= form.label :property_constructed_year, "建築年"%>
            <%= form.text_field :property_constructed_year, class: 'col-span-2' %>
        </div>
    </section>

    <div class="text-center mt-10">
        <%= form.submit '査定依頼をする', class: 'text-xl bg-blue-400 text-white px-10 py-5 rounded-lg m-auto' %>
    </div>
<% end %>

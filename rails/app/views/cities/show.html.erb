<% content_for :head_tag do %>
  <%= stylesheet_link_tag "color_stars", "data-turbo-track": "reload" %>
  <% if @offices.empty? %>
    <meta name="robots" content="noindex">
  <% end %> 
<% end %>
<h1 class="text-xl sm:text-2xl md:text-4xl text-center"><%= prefecture_and_city_name(@city) %>の不動産会社</h1>
<nav class="mt-3">
  <%= link_to 'TOP', root_url, { class: 'text-cyan-500 underline text-sm md:text-base' } %>
  ＞
  <span class="text-sm md:text-base"><%= prefecture_and_city_name(@city) %></span>
</nav>
<%= render partial: 'office_list', locals: { offices: @offices } %>
<%= render partial: 'address_list', locals: { city: @city } %>

<h1 class="text-xl sm:text-2xl md:text-4xl text-center"><%= "#{@prefecture.name}/#{@city.name}" %>の不動産会社</h1>
<nav class="border">
  <h2 class="text-base px-3 lg:px-10 py-2 lg:text-lg border-b-2"><%= @prefecture.name %>全域</h2>
  <ul class="grid grid-cols-2 text-sm sm:grid-cols-3 lg:grid-cols-5 lg:text-base p-3 lg:p-10">
    <% @cities.each do |city| %>
      <%= link_to city_path(@prefecture.id, city.id) do %>
        <li class="whitespace-nowrap text-cyan-500 underline"><%= city.name %></li>
      <% end %>
    <% end %>
  </ul>
</nav>
